<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AddCheck">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/save"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="540dp"
            android:layout_marginLeft="30dp"
            android:text="保存"
            android:background="@drawable/shape1"/>
        <Button
            android:id="@+id/next"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="540dp"
            android:layout_marginLeft="202dp"
            android:text="下一个"
            android:background="@drawable/shape1"/>
        <ImageView
            android:layout_width="364dp"
            android:layout_height="642dp"
            android:background="@drawable/abcdf"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/id"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="65dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="120dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sex"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="175dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/stuclass"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="230dp"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/photo"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/imageviewshape" />
        <RadioGroup
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="30dp">
            <RadioButton
                android:id="@+id/chidao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="迟到（扣5分）"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
            <RadioButton
                android:id="@+id/queqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="缺勤（扣10分）"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="25dp"/>
            <RadioButton
                android:id="@+id/qingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请假（0分）"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="25dp"/>
            <RadioButton
                android:id="@+id/qiandao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签到（加5分）"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="25dp"/>
        </RadioGroup>

    </FrameLayout>
</LinearLayout>
